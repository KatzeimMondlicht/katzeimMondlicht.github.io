<header>
	<h1>Tag: {{ page.title }}</h1>
	<h2>Related Posts:</h2>
	<ul>
		{% for post in site.posts %}
		{% if post.tags contains page.tag %}
			<li><a href="{{ post.url }}">{{ post.title }}</a></li>
		{% endif %}
		{% endfor %}
	</ul>
</header>

{% assign tags = site.tags[page.title] %}
{% include series.liquid posts=tags %}
